{
  "plugins": ["transform-runtime"],
  "presets": [ "es2015", "react", "stage-0" ],
  "env": {
    "development": {
      "plugins": [
        [ "react-transform", {
          "transforms": [
            {
              "transform": "react-transform-hmr",
              "imports": ["react"],
              "locals": ["module"]
            },
            {
              "transform": "react-transform-catch-errors",
              "imports": [ "react", "redbox-react" ]
            }
          ]
        }]
      ]
    },
    "i18n": {
      "plugins": [
        [ "react-intl", {
          "messagesDir": "./_translations",
          "enforceDescriptions": true
        }]
      ]
    }
  }
}